"use client";

import { useState, useEffect, useCallback } from "react";
import type { GameRendererProps, GameAction } from "@littlepartytime/sdk";

export default function GameRenderer({ platform, state: initialState }: GameRendererProps) {
  const me = platform.getLocalPlayer();
  const players = platform.getPlayers();
  const [gameState, setGameState] = useState(initialState);

  useEffect(() => {
    if (initialState && initialState.phase !== "loading") {
      setGameState(initialState);
    }
  }, [initialState]);

  useEffect(() => {
    const handler = (...args: unknown[]) => {
      setGameState(args[0] as typeof initialState);
    };
    platform.on("stateUpdate", handler);
    return () => platform.off("stateUpdate", handler);
  }, [platform]);

  const sendAction = useCallback(
    (action: GameAction) => platform.send(action),
    [platform]
  );

  const isEnded = gameState?.phase === "ended";

  if (isEnded) {
    return (
      <div style={{ display: "flex", flexDirection: "column", alignItems: "center", justifyContent: "center", minHeight: "60vh", gap: 16 }}>
        <p style={{ fontSize: 24, fontFamily: "var(--font-display)", color: "var(--accent-primary)" }}>Game Over</p>
      </div>
    );
  }

  return (
    <div style={{ display: "flex", flexDirection: "column", alignItems: "center", gap: 24, paddingTop: 32, paddingLeft: 16, paddingRight: 16 }}>
      <p style={{ fontSize: 18, color: "var(--text-primary)" }}>TODO: Build your game UI</p>
      <p style={{ fontSize: 14, color: "var(--text-secondary)" }}>
        Current player: {me.nickname}
      </p>
    </div>
  );
}
