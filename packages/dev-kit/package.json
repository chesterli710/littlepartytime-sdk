{
  "name": "@littlepartytime/dev-kit",
  "version": "1.15.0",
  "description": "Development toolkit CLI for Little Party Time game developers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    }
  },
  "bin": {
    "lpt-dev-kit": "./dist/cli.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && cp -r src/webapp dist/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": ["dist"],
  "keywords": ["boardgame", "dev-tools", "littlepartytime"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chesterli710/littlepartytime-sdk.git",
    "directory": "packages/dev-kit"
  },
  "peerDependencies": {
    "playwright": ">=1.40.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5",
    "archiver": "^7",
    "chokidar": "^4",
    "express": "^5",
    "react": "^19",
    "react-dom": "^19",
    "socket.io": "^4",
    "socket.io-client": "^4",
    "vite": "^7"
  },
  "devDependencies": {
    "@types/archiver": "^6",
    "@types/express": "^5",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5",
    "vitest": "^3"
  }
}
